[Unit]
Description=Tesla HTTP Proxy
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=%h/lightfriend-cloud/backend
ExecStart=/usr/bin/docker-compose -f docker-compose.tesla-proxy.yml up -d
ExecStop=/usr/bin/docker-compose -f docker-compose.tesla-proxy.yml down
User=%u

[Install]
WantedBy=multi-user.target
